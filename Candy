local gui = Instance.new("ScreenGui")
gui.Name = "CandyBlossomGiverV2"
gui.ResetOnSpawn = false
gui.Parent = game:GetService("CoreGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 380, 0, 200)
frame.Position = UDim2.new(0.5, -190, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(255, 182, 193)
frame.BorderSizePixel = 0
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.BackgroundTransparency = 0.05
frame.Parent = gui
frame.ClipsDescendants = true
frame.Active = true
frame.Draggable = true

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.BackgroundTransparency = 1
title.Text = "CandyBlossomGiver V.2"
title.TextColor3 = Color3.fromRGB(255, 105, 180)
title.Font = Enum.Font.GothamBold
title.TextSize = 22
title.Parent = frame

local rejoinButton = Instance.new("TextButton")
rejoinButton.Size = UDim2.new(0.9, 0, 0, 45)
rejoinButton.Position = UDim2.new(0.05, 0, 0.4, 0)
rejoinButton.Text = "Ir a un servidor viejo"
rejoinButton.Font = Enum.Font.GothamMedium
rejoinButton.TextSize = 18
rejoinButton.TextColor3 = Color3.fromRGB(255, 255, 255)
rejoinButton.BackgroundColor3 = Color3.fromRGB(255, 105, 180)
rejoinButton.BorderSizePixel = 0
rejoinButton.AutoButtonColor = true
rejoinButton.Parent = frame

rejoinButton.MouseButton1Click:Connect(function()
	local ts = game:GetService("TeleportService")
	local placeId = game.PlaceId
	local player = game.Players.LocalPlayer
	ts:Teleport(placeId, player)
end)

local candyButton = Instance.new("TextButton")
candyButton.Size = UDim2.new(0.9, 0, 0, 45)
candyButton.Position = UDim2.new(0.05, 0, 0.65, 0)
candyButton.Text = "Conseguir CandyBlossom"
candyButton.Font = Enum.Font.GothamMedium
candyButton.TextSize = 18
candyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
candyButton.BackgroundColor3 = Color3.fromRGB(255, 20, 147)
candyButton.BorderSizePixel = 0
candyButton.AutoButtonColor = true
candyButton.Parent = frame

local errorLabel = Instance.new("TextLabel")
errorLabel.Size = UDim2.new(1, 0, 0, 30)
errorLabel.Position = UDim2.new(0, 0, 1, -28)
errorLabel.Text = ""
errorLabel.Font = Enum.Font.GothamBold
errorLabel.TextSize = 14
errorLabel.TextColor3 = Color3.fromRGB(255, 0, 80)
errorLabel.BackgroundTransparency = 1
errorLabel.TextStrokeTransparency = 0.7
errorLabel.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
errorLabel.Parent = frame

candyButton.MouseButton1Click:Connect(function()
	errorLabel.Text = "6B Sheckles No Encontrados."
end)
